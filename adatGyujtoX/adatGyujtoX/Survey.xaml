        <StackLayout VerticalOptions="StartAndExpand"  BackgroundColor="Aqua" HorizontalOptions="FillAndExpand" Padding="20">
            <Label Text="Cognative TouchPoint"
                   FontAttributes="Bold"
               HeightRequest="20"
              HorizontalOptions="CenterAndExpand"
           VerticalOptions="CenterAndExpand" />
